{
  "version": 2,
  "builds": [
    { "src": "BinapexDark/api/index.ts", "use": "@vercel/node" },
    { "src": "BinapexDark/client/index.html", "use": "@vercel/static-build", "config": { "distDir": "BinapexDark/client/dist", "buildCommand": "cd BinapexDark && npm ci --prefer-offline && npm run build" } }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/BinapexDark/api/index.ts" },
    { "source": "/(.*)", "destination": "/BinapexDark/client/dist/index.html" }
  ]
}
